            <article class="small-12 medium-8 columns">
                <h1>Contact Us</h1>
                <form action="" method="post" id="contact-form" class="row contact-form">
                    <div class="form-group small-12 medium-6 columns">
                        <label for="first-name">First Name</label>
                        <input type="text" name="firstName" id="first-name" class="input--large" placeholder="Jane" required>
                    </div>
                    <div class="form-group small-12 medium-6 columns">
                        <label for="first-name">Last Name</label>
                        <input type="text" name="lastName" id="last-name" class="input--large" placeholder="Doe">
                    </div>
                    <div class="form-group small-12 columns">
                        <label for="email">Email address</label>
                        <input type="email" name="email" id="email" class="input--large" aria-describedby="emailHelp" placeholder="jane@mail.com" required>
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group small-12 columns">
                        <label for="subject">Subject</label>
                        <input type="text" name="subject" id="subject" class="input--large" placeholder="I'd like to hire you for..." required>
                    </div>
                    <div class="form-group small-12 columns">
                        <label for="message">Message</label>
                        <textarea name="message" id="message" class="input--large" placeholder="I have a project that requires.." rows="5" required></textarea>
                    </div>
                    <div class="form-group small-12 columns">
                        <input type="checkbox" name="terms" id="terms" class="form-check-input" required>
                        <label for="terms"><small>I have read and agree to the <a href="#" target="_self">terms and conditions</a> of this site.</small></label>
                    </div>
                    <div class="form-group small-12 columns">
                        <button type="submit" class="button large"><i class="fa fa-refresh spin" style="display:none"></i> Send Message</button>
                    </div>
                </form>
            </article>
        </div>
    </section>

